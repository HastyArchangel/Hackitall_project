{
    "manifest_version": 3,
    "name": "Local API Text Selector",
    "version": "1.0",
    "description": "Select text, send it to a local API (localhost:5000), and display the response.",
    "permissions": [
    ],
    "host_permissions": [
      "http://localhost:5000/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [

    ]
  }